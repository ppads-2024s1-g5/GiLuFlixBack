@model GiLuFlixBack.Models.User


@{
    ViewData["Title"] = "Login";
}

<div class="text-center">
    <h1 class="display-4">Login</h1>
</div>

@if (ViewBag.Fail != null)
{
    <div class="alert alert-danger">Usu√°rio ou senha incorretos!</div>
}

<form asp-action="Login">
    <!-- Email input -->
    <div data-mdb-input-init class="form-outline mb-4">
        <input type="text" id="form1Example1" name="Email" class="form-control" />
        <label class="form-label" for="form1Example1">Username</label>
    </div>

    <!-- Password input -->
    <div data-mdb-input-init class="form-outline mb-4">
        <input type="Password" id="form1Example2" name="Password" class="form-control" />
        <label class="form-label" for="form1Example2">Password</label>
    </div>

    <!-- 2 column grid layout for inline styling -->
    <div class="row mb-4">
        <div class="col d-flex justify-content-center">
            <!-- Checkbox -->
            <div class="form-check">
                <input class="form-check-input" type="checkbox" value="true" id="form1Example3" name="RememberMe" checked />
                <label class="form-check-label" for="form1Example3"> Lembrar de mim </label>
            </div>
        </div>
    </div>

    <!-- Submit button -->
    <button data-mdb-ripple-init type="submit" class="btn btn-primary btn-block">Entrar</button>
</form>